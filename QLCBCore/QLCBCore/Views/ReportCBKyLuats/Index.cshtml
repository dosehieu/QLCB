@model IEnumerable<QLCBCore.Models.BaoCao.ReportCBKyLuat>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .table-responsive {
        display: table;
    }
</style>
<div class="row">
    <div class="col-lg-12 col-xs-12 col-md-12">
        <div class="card card-primary card-outline">
            <div class="card-body" style="line-height:20px;">
                <h4 style="text-align:center; padding-bottom: 10px;">Danh sách cán bộ khen thưởng</h4>
                <h6 style="text-align:center; padding-bottom: 10px;">Năm @DateTime.Now.Year.ToString()</h6>
                <div class="data-table table-responsive" id="divListUser">
                    <table class="table table-bordered table-hover table-striped-custom table-responsive gridView">
                        <thead style="text-align:center; vertical-align: middle;">
                            <tr style="vertical-align:middle;">
                                <th style="vertical-align:middle;">STT</th>
                                <th style="vertical-align:middle;">Họ và tên</th>
                                <th style="vertical-align:middle;">Ngày sinh</th>
                                <th style="vertical-align:middle;">Giới tính</th>
                                <th style="vertical-align:middle;">Tên phòng ban</th>
                                <th style="vertical-align:middle;">Tên chức vụ</th>
                                <th style="vertical-align:middle;">Loại cán bộ</th>
                                <th style="vertical-align:middle;">Năm kỷ luật</th>
                                <th style="vertical-align:middle;">Hình thức kỷ luật</th>
                                <th style="vertical-align:middle;">Nội dung kỷ luật</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{int i = 0;}
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th style="text-align:center;">
                                        @(i = i + 1)
                                    </th>
                                    <th>
                                        @Html.DisplayFor(modelItem => item.HoTen)
                                    </th>
                                    <th>
                                        @Html.DisplayFor(modelItem => item.NgaySinh)
                                    </th>
                                    <th>
                                        @Html.DisplayFor(modelItem => item.GioiTinh)
                                    </th>
                                    <th>
                                        @Html.DisplayFor(modelItem => item.TenPhongBan)
                                    </th>
                                    <th>
                                        @Html.DisplayFor(modelItem => item.TenChucVu)
                                    </th>
                                    <th>
                                        @Html.DisplayFor(modelItem => item.KieuCanBo)
                                    </th>
                                    <th>
                                        @Html.DisplayFor(modelItem => item.Nam)
                                    </th>
                                    <th>
                                        @Html.DisplayFor(modelItem => item.HinhThucKyLuat)
                                    </th>
                                    <th>
                                        @Html.DisplayFor(modelItem => item.NoiDung)
                                    </th>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

