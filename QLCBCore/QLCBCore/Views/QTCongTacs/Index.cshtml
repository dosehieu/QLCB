@model IEnumerable<QLCBCore.Models.QTCongTac>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>

    .table-responsive {
        display: table;
    }
</style>

<div class="row">
    <div class="col-lg-12 col-xs-12 col-md-12">
        <div class="card card-primary card-outline">
            <div class="card-header"><h3 class="card-title"><i class="fas fa-list"></i> DANH SÁCH QUÁ TRÌNH CÔNG TÁC</h3></div>
            <div class="card-body">
                <div class="mb-2">

                    <button class="btn btn-primary" onclick="window.location.href = '/QTCongTacs/Create';"><i class="fa fa-plus"></i> Thêm mới</button>

                </div>

                <div class="data-table table-responsive" id="divListUser">
                    <table class="table table-bordered table-hover table-striped-custom table-responsive gridView">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.CanBo)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TuThangNam)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DenThangNam)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.GhiChu)
                                </th>
                                @*<th>
                                        @Html.DisplayNameFor(model => model.isChuyenCT)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.IsDeleted)
                                    </th>*@
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CanBo.HoTen)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TuThangNam)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DenThangNam)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.GhiChu)
                                    </td>
                                    @*<td>
                                            @Html.DisplayFor(modelItem => item.isChuyenCT)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.IsDeleted)
                                        </td>*@
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.ID"><i class="fa fa-edit"></i></a>
                                    </td>
                                    <td>
                                        <a asp-action="Delete" asp-route-id="@item.ID"><i class="fa fa-trash-alt"></i></a>
                                    </td>
                                    @*<td>
                                            <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                                            <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                                            <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                                        </td>*@
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>