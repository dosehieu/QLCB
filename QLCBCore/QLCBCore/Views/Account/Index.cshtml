
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/css/Login.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
</head>
<body>

    <input type="hidden" name="requestpath" id="requestpath" value="@ViewBag.RequestPath" />
    <div class="container">
        <div class="card card-container">
            <img id="profile-img" class="profile-img-card" src="~/css/avatar_2x.png" />
            <p id="profile-name" class="profile-name-card"></p>
            <form asp-controller="Account" asp-action="Login" method="post" class="form">
                <div class="form-group">
                    <input class="form-control" type="text" name="username" id="username" />
                </div>
                <div class="form-group">
                    <input class="form-control" type="password" name="password" id="password" />
                </div>
                
                <button class="btn btn-lg btn-primary btn-block btn-signin" type="submit">Đăng nhập</button>
            </form>
            <a href="#" class="forgot-password">
                Quên mật khẩu?
            </a>
        </div><!-- /card-container -->
    </div><!-- /container -->

</body>
</html>
