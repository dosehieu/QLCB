@model QLCBCore.Models.ThongKe.ThongKeHocHam
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script>
    $(document).ready(function () {
            //chart
            Highcharts.chart('chart', {
                chart: {
                    type: 'column'
                },
                colors: [
                    '#95CEFF', '#A9FF97', '#ecf70f'],
                title: {
                    text: ''
                },
                exporting: {
                    enabled: false
                },
                subtitle: {
                    text: ''
                },
                xAxis: {
                    categories: [
                        'Tôn giáo'
                    ],
                    crosshair: true
                },
                yAxis: {
                    min: 0,
                    title: {
                        text: 'người'
                    }
                },
                plotOptions: {
                    column: {
                        dataLabels: {
                            enabled: true,
                            crop: false,
                            overflow: 'none'
                        },
                        pointPadding: 0.2,
                        borderWidth: 0
                    }
                },
                series: [{
                    name: 'Tổng số',
                    data: [@Model.TongSo]
                },
                        {
                            name: 'Giáo sư',
                            data: [@Model.GiaoSu]
                        },
                        {
                            name: 'Phó giáo sư',
                            data: [@Model.PhoGiaoSu]
                    },
                        {
                            name: 'Khác',
                            data: [@Model.Khac]
                    }
                ]
            });
        });
</script>
<style>
    .table-responsive {
        display: table;
    }

    .tab {
        overflow: hidden;
        border: 1px solid #ccc;
        background-color: #3598dc;
        float: inherit;
    }

        /* Style the buttons inside the tab */
        .tab button {
            background-color: inherit;
            float: left;
            border: none;
            outline: none;
            cursor: pointer;
            padding: 14px 16px;
            transition: 0.3s;
            font-size: 17px;
            color: #FFFFFF;
        }

            /* Change background color of buttons on hover */
            .tab button:hover {
                background-color: #ddd;
            }

            /* Create an active/current tablink class */
            .tab button.active {
                background-color: #ccc;
            }

    /* Style the tab content */
    .tabcontent {
        display: none;
        padding: 6px 12px;
        border: 1px solid #ccc;
        border-top: none;
    }

    .none {
        display: none;
    }

    #bold1 {
        font-weight: bold;
    }
</style>
<div class="row">
    <div class="col-lg-12 col-xs-12 col-md-12">
        <div class="card card-primary card-outline">
            <div class="card-body" style="line-height:20px;">
                <h4 style="text-align:center; padding-bottom: 10px;">THỐNG KÊ CÁN BỘ THEO HỌC HÀM</h4>
                <div class="">
                    <div id="chart" style="width:100%; height:400px;">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

